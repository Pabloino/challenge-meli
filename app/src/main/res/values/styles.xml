<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/meliColorPrimaryVariant</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/ActionBarTitleTextStyle</item>
        <item name="background">@color/meliColorPrimary</item>
    </style>

    <style name="ActionBarTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="baseTextStyle" >
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="titleProductResultStyle" parent="baseTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="priceProductResultStyle" parent="baseTextStyle">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="titleProductDetailsStyle" parent="baseTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="priceProductDetailsStyle" parent="baseTextStyle">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="titleProductInfoStyle" parent="baseTextStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="productInfoItemStyle" parent="baseTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/productInfoColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:padding">12dp</item>
    </style>

</resources>